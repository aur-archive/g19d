#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

PID=`pgrep -f "python2 /usr/sbin/g19daemon"`
case "$1" in
  start)
    stat_busy "Starting g19daemon"
    [ -z "$PID" ] && /usr/sbin/g19daemon
    if [ $? -gt 0 ]; then
      stat_fail
    else
      add_daemon g19d
      stat_done
    fi
    ;;
  stop)
    stat_busy "Stopping g19daemon"
    [ ! -z "$PID" ] && kill $PID &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon g19d
      stat_done
    fi
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"
esac
